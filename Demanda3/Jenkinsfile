pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Franck-Patrick/Desafio_DellTech.git'
            }
        }

        stage('Run Container') {
            steps {
                script {
                    docker.image('python:2.7').inside {
                        sh '''
                            python --version
                            echo "Running inside container"
                            ls -la
                        '''
                    }
                }
            }
        }

        stage('Execute Script') {
            steps {
                sh '''
                    echo "Generic script execution"
                    pwd
                    date
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    docker run --rm -d --name test-container nginx:alpine
                    docker ps
                '''
            }
        }
    }

    post {
        always {
            sh 'docker stop test-container || true'
            sh 'docker rm test-container || true'
        }
    }
}