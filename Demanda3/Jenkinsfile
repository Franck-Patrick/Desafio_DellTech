pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clonando a branch 'main' do reposit√≥rio
                    git branch: 'main', url: 'https://github.com/Franck-Patrick/Desafio_DellTech.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Construindo a imagem Docker com base no Dockerfile fornecido
                    docker.build('meu-app-python', '-f Dockerfile .')
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Executando o container Docker do app Python na etapa de deploy
                    docker.image('meu-app-python').run('-d -p 3000:3000')
                    echo 'Container de deploy (Python HTTP Server) executado com sucesso!'
                }
            }
        }
    }

    post {
        always {
            // Limpando containers ao final
            sh 'docker ps -q | xargs docker stop || true'
            sh 'docker ps -aq | xargs docker rm || true'
        }
    }
}
