pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clonando o repositório público do GitHub
                    git 'https://github.com/Franck-Patrick/Desafio_DellTech.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Executando um container Docker dentro da pipeline
                    docker.image('ubuntu:latest').inside {
                        // Executando um comando genérico dentro do container
                        sh 'echo "Executando script dentro do container"'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Executando outro container Docker na etapa de deploy
                    docker.image('nginx:latest').run('-d -p 8080:80')
                    echo 'Container de deploy (nginx) executado com sucesso!'
                }
            }
        }
    }

    post {
        always {
            // Limpando containers ao final
            sh 'docker ps -q | xargs docker stop || true'
            sh 'docker ps -aq | xargs docker rm || true'
        }
    }
}
