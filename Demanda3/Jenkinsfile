pipeline {
    agent any

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'main', credentialsId: 'jk-gh-tk', url: 'https://github.com/Franck-Patrick/Desafio_DellTech.git'
            }
        }

        stage('Build Docker image') {
            steps {
                // Executando um container Docker em segundo plano
                sh 'docker run -d --name my_container python:2.7'
            }
        }

        stage('Execute Command in Container') {
            steps {
                // Executando um comando dentro do container em execução
                sh 'docker exec my_container python -c "print(\'Hello from inside the container\')"'
            }
        }

        stage('Deploy Application') {
            steps {
                // Executando um container na etapa de deploy (Nginx como exemplo)
                sh 'docker run -d -p 8080:80 --name deploy_container nginx'
            }
        }
    }
}
